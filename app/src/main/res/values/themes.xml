<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.CardReader" parent="Theme.Material3.DayNight.NoActionBar">

        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/app_blu</item>
        <item name="colorOnPrimary">@color/lit_black</item>
        <!-- Secondary brand color. -->
        <item name="colorOnSecondary">#FFFFFF</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorOnPrimary</item>    </style>

    <style name="Theme.CardReader" parent="Base.Theme.CardReader" />

    <style name="Base.Theme.CashierRetailApp" parent="Theme.Material3.Light.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->

        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/app_blu</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorOnSecondary">#FFFFFF</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimary</item>

    </style>

    <style name="BottomSheetDialogStyle" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="android:background">@drawable/bottom_sheet_dialog_background</item>
    </style>



    <style name="midText" parent="Widget.AppCompat.TextView">
        <item name="cornerRadius">30dp</item>
        <item name="android:radius">10dp</item>
        <item name="android:fontFamily"> @font/br_firma_regular</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">13sp</item>
    </style>

    <style name="StylishButton" parent="@style/Widget.AppCompat.Button.Borderless">
        <item name="android:background">@drawable/button_background</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_height">45dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:textSize">16sp</item>
        <item name="android:foreground">?android:attr/selectableItemBackground</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">@font/br_firma_regular</item>

    </style>



    <style name="Circle">
        <item name="cornerSize">50%</item>
    </style>





</resources>